<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/retweet_content"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/retweet_background"
    android:layout_marginTop="20dp"
    android:visibility="gone">

    <TextView
        android:id="@+id/retweeted_user_profile"
        android:layout_marginTop="5dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/retweet_name"/>

    <TextView
        android:id="@+id/txt_weibo_content_retweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"/>

    <GridLayout
        android:id="@+id/layout_grid_retweet"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    </GridLayout>

</LinearLayout>